{
  "manifest_version": 3,
  "name": "NinjaDark",
  "version": "1.0.0",
  "description": "Dark mode for NinjaRMM with inverted colors",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://app.ninjarmm.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
